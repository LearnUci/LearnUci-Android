<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2.0" >

    <LinearLayout
        android:id="@+id/tour_main_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tour_main_textview_left"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="2dp"
            android:background="#888888"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="10dp"
            android:text="@string/tour_general"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/tour_main_scroll_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp" >
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tour_main_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tour_main_textview_right"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="2dp"
            android:background="#888888"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="10dp"
            android:text="@string/tour_academic"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/tour_main_scroll_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp" >
        </ScrollView>
    </LinearLayout>

</LinearLayout>